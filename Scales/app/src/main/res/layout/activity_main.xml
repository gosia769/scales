<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        tools:context=".MainActivity" android:background="#E1E9EC">

    <android.support.constraint.ConstraintLayout
            android:layout_width="421dp"
            android:layout_height="400dp"
            android:background="@color/screenBackground"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            android:id="@+id/constraintLayout" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.0">

        <TextView
                android:layout_width="194dp"
                android:layout_height="123dp"
                android:text="0.0 kg"
                android:gravity="center"
                android:background="@color/screenBackground"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:textAppearance="@style/TextAppearance.AppCompat.Body1"
                android:textSize="44sp" android:textColor="#186588"
                app:layout_constraintVertical_bias="0.411"
                android:id="@+id/lastWeightValue"
                app:layout_constraintHorizontal_bias="0.554"/>
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="@string/last_date"
                android:textSize="25sp"
                android:ems="10"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/lastWeightDate"
                android:layout_marginBottom="288dp"
                android:layout_marginRight="40dp"/>

    </android.support.constraint.ConstraintLayout>


    <android.support.constraint.ConstraintLayout
            android:layout_width="403dp"
            android:layout_height="339dp"
            android:background="#D1DDE7"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintStart_toStartOf="parent"
    >

        <Button
                android:id="@+id/bSearch"
                android:layout_width="151dp"
                android:layout_height="215dp"
                android:padding="16dp"
                android:text="history"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:onClick="onButtonHistoryClick"
                android:textSize="18sp" android:layout_marginBottom="100dp"
                android:layout_marginStart="12dp"/>

        <Button
                android:id="@+id/bTrends"
                android:layout_width="152dp"
                android:layout_height="226dp"
                android:padding="16dp"
                android:text="trends"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:textSize="18sp" android:layout_marginBottom="96dp"
                android:layout_marginStart="224dp"/>

        <Button
                android:layout_width="367dp"
                android:text="Stand on scales"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_height="54dp"
                android:onClick="onButtonScalesClick"
                android:id="@+id/button2" android:layout_marginBottom="24dp"
                android:layout_marginStart="12dp"/>

    </android.support.constraint.ConstraintLayout>
</android.support.constraint.ConstraintLayout>